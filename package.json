{
  "name": "com.accedia.training",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "eslint src/app.js --fix",
    "lint": "./node_modules/.bin/eslint",
    "prepare": "husky install",
    "css:scss": "node-sass --output-style compressed -o dist src/assets/styles",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/assets/styles/main.scss --custom-syntax postcss-less",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "build:js": "webpack --mode=production",
    "build:html": "posthtml -c posthtml.json",
    "build": "run-s build:* watch",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch:css": "onchange \"src/assets/styles\" -- npm run build:css",
    "watch:js": "onchange \"src/\" -- webpack --mode=development",
    "watch:html": "onchange \"src/\" -- npm run build:html",
    "watch": "run-p serve watch:*"
  },
  "author": "Nikolay Pleshkov",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "auto-prefixer": "^0.4.2",
    "autoprefixer": "^10.4.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "browser-sync": "^2.27.7",
    "css-loader": "^6.6.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "export-loader": "^1.0.52",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "htmlnano": "^2.0.0",
    "husky": "^7.0.4",
    "install": "^0.13.0",
    "node-sass": "^7.0.1",
    "npm": "^8.5.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.7",
    "postcss-cli": "^9.1.0",
    "postcss-less": "^6.0.0",
    "postcss-loader": "^6.2.1",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.8.0",
    "prettier": "2.5.1",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@ls-lint/ls-lint": "^1.11.0",
    "@popperjs/core": "^2.11.2",
    "axios": "^0.26.1",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "eslint-config-prettier": "^8.4.0",
    "firebase": "^9.6.8",
    "jquery": "^3.6.0",
    "lit": "^2.2.0",
    "lit-html": "^2.2.0",
    "lite-server": "^2.6.1",
    "regenerator-runtime": "^0.13.9"
  }
}
